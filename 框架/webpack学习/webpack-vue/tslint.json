{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        // 引号：（使用单引号）
        "quotemark": [true, "single"],
        // 缩进使用tab，tab大小是2个空格
        "indent": [true, "tabs", 2],
        // 关闭"多导入，按字母排序"
        "ordered-imports": false,
        // 关闭"对象按key的字母排序"
        "object-literal-sort-keys": false,
        // 关闭"禁止console语句"
        "no-console": false
    }
}
